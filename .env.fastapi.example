# FastAPI Configuration
APP_NAME=Agent Marketplace Platform - Control Plane
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agent_marketplace
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Firestore
FIRESTORE_PROJECT_ID=your-gcp-project
FIRESTORE_CREDENTIALS_PATH=/path/to/credentials.json

# Google Cloud
GCP_PROJECT_ID=your-gcp-project
GCP_REGION=us-central1

# Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth
OAUTH_PROVIDER_URL=https://api.manus.im
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# Stripe
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
JAEGER_ENABLED=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Data Plane
DATA_PLANE_URL=http://localhost:8001
DATA_PLANE_TIMEOUT_SECONDS=300

# Agent Registry
AGENT_REGISTRY_CACHE_TTL_SECONDS=3600
MAX_AGENT_EXECUTION_TIME_SECONDS=3600

# Memory System
TASK_MEMORY_RETENTION_DAYS=30
EPISODE_MEMORY_RETENTION_DAYS=90
VECTOR_DB_SIMILARITY_THRESHOLD=0.7

# Billing
BILLING_CYCLE_DAY=1
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
